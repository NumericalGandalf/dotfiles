set $mod Mod1
floating_modifier $mod

set $left h
set $down j
set $up k
set $right l

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9

bindsym $mod+Shift+1 move container workspace 1, workspace 1
bindsym $mod+Shift+2 move container workspace 2, workspace 2
bindsym $mod+Shift+3 move container workspace 3, workspace 3
bindsym $mod+Shift+4 move container workspace 4, workspace 4
bindsym $mod+Shift+5 move container workspace 5, workspace 5
bindsym $mod+Shift+6 move container workspace 6, workspace 6
bindsym $mod+Shift+7 move container workspace 7, workspace 7
bindsym $mod+Shift+8 move container workspace 8, workspace 8
bindsym $mod+Shift+9 move container workspace 9, workspace 9

popup_during_fullscreen smart
focus_on_window_activation smart

gaps inner 4
default_border none

set $col_border #0f0e0e
client.focused $col_border $col_border #000000 $col_border $col_border
client.unfocused $col_border $col_border #000000 $col_border $col_border
client.urgent $col_border $col_border #000000 $col_border $col_border

for_window [floating] border pixel 4
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [shell="xwayland"] title_format "[XWayland] %title"
for_window [title="^emapl$"] floating enable, border pixel 4

bindsym $mod+Shift+q kill
bindsym $mod+Shift+t exec --no-startup-id alacritty
bindsym $mod+Shift+e exec --no-startup-id emacsclient -c
bindsym $mod+Shift+w exec --no-startup-id firefox
bindsym $mod+Shift+d exec --no-startup-id emacsclient -cF "((visibility . nil))" -e "(emapl)"

bindsym $mod+Shift+s mode "System"
mode "System" {
    bindsym f fullscreen toggle, mode "default"
    bindsym v floating toggle, mode "default"
    bindsym y split toggle, mode "default"
    bindsym u layout toggle split tabbed, mode "default"
    
    bindsym e exit
    bindsym c reload
    bindsym l exec --no-startup-id loginctl lock-session, mode "default"
    bindsym r exec --no-startup-id loginctl reboot, mode "default"
    bindsym s exec --no-startup-id loginctl suspend, mode "default"
    bindsym p exec --no-startup-id loginctl poweroff, mode "default"
    bindsym h exec --no-startup-id loginctl hibernate, mode "default"

    bindsym Escape mode "default"
}

set $size 10
bindsym $mod+Shift+r mode "Resize"
mode "Resize" {
    bindsym $right resize grow right $size px or $size ppt
    bindsym Shift+$right resize shrink right $size px or $size ppt

    bindsym $down resize grow down $size px or $size ppt
    bindsym Shift+$down resize shrink down $size px or $size ppt

    bindsym $up resize grow up $size px or $size ppt
    bindsym Shift+$up resize shrink up $size px or $size ppt

    bindsym $left resize grow left $size px or $size ppt
    bindsym Shift+$left resize shrink left $size px or $size ppt
    
    bindsym Escape mode "default"
}

font pango:DejaVu Sans Mono 10

bar {
    swaybar_command waybar
}

input * {
    xkb_layout us,de
    xkb_options grp:win_space_toggle
}

set $bg ~/Pictures/GruvboxWolf.png
output * bg $bg fit

set $lock "swaylock -i $bg -s fit"
exec swayidle -w before-sleep $lock lock $lock

exec --no-startup-id emacs --daemon
