include /etc/sway/config.d/*

set $mod Mod4
floating_modifier $mod

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Ctrl+h move left
bindsym $mod+Ctrl+j move down
bindsym $mod+Ctrl+k move up
bindsym $mod+Ctrl+l move right

bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 0

bindsym $mod+Ctrl+1 move container workspace 1, workspace 1
bindsym $mod+Ctrl+2 move container workspace 2, workspace 2
bindsym $mod+Ctrl+3 move container workspace 3, workspace 3
bindsym $mod+Ctrl+4 move container workspace 4, workspace 4
bindsym $mod+Ctrl+5 move container workspace 5, workspace 5
bindsym $mod+Ctrl+6 move container workspace 6, workspace 6
bindsym $mod+Ctrl+7 move container workspace 7, workspace 7
bindsym $mod+Ctrl+8 move container workspace 8, workspace 8
bindsym $mod+Ctrl+9 move container workspace 9, workspace 9
bindsym $mod+Ctrl+0 move container workspace 0, workspace 0

popup_during_fullscreen smart
focus_on_window_activation smart
smart_borders on

font pango:Iosevka 11
titlebar_padding 3 1

for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [shell="xwayland"] title_format "[XWayland] %title"
for_window [title="^app-launcher.el$"] floating enable, border pixel

bindsym $mod+q kill
bindsym $mod+v layout toggle split tabbed
bindsym $mod+b split toggle
bindsym $mod+f fullscreen toggle
bindsym $mod+z floating toggle

bindsym $mod+c reload
bindsym $mod+Shift+c exit
bindsym $mod+y exec systemctl suspend
bindsym $mod+Shift+y exec systemctl hibernate
bindsym $mod+Ctrl+y exec loginctl lock-session
bindsym $mod+p exec systemctl poweroff
bindsym $mod+Shift+p exec systemctl reboot

set $emacs emacsclient -ca emacs
bindsym $mod+e exec $emacs
bindsym $mod+t exec emacsclient -ce "(vterm)"
bindsym $mod+d exec emacsclient -r -e "(app-launcher)"

bindsym $mod+r mode "Resize"
mode "Resize" {
    bindsym l resize grow right 10 ppt
    bindsym Shift+l resize shrink right 10 ppt
    bindsym Ctrl+l resize grow right 5 ppt
    bindsym Ctrl+Shift+l resize shrink right 5 ppt
    
    bindsym h resize grow left 10 ppt
    bindsym Shift+h resize shrink left 10 ppt
    bindsym Ctrl+h resize grow left 5 ppt
    bindsym Ctrl+Shift+h resize shrink left 5 ppt    
    
    bindsym j resize grow down 10 ppt
    bindsym Shift+j resize shrink down 10 ppt
    bindsym Ctrl+j resize grow down 5 ppt
    bindsym Ctrl+Shift+j resize shrink down 5 ppt
    
    bindsym k resize grow up 10 ppt
    bindsym Shift+k resize shrink up 10 ppt
    bindsym Ctrl+k resize grow up 5 ppt
    bindsym Ctrl+Shift+k resize shrink up 5 ppt
    
    bindsym Escape mode "default"
}

bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

bar {
    swaybar_command swaybar
    status_command i3status
}

input * {
    xkb_layout us,de
    xkb_options grp:win_space_toggle
}

output "Dell Inc. AW2724DM 66YZHV3" mode 2560x1440@165Hz scale 1.25

set $lock "swaylock -c 000000"
exec swayidle -w before-sleep $lock lock $lock

exec $emacs --daemon
